{% extends 'base.html.twig' %}

{% block content %}
    {{ form_start(form) }}
    {{ form_row(form.lieu) }}
    {{ form_row(form.date) }}
    {{ form_row(form.montant) }}
    <hr>
    <table id="tblLignes" border="1" width="600px">
        <thead>
        <tr>
            <th width="20px">&nbsp;</th>
            <th>désignation</th>
            <th width="100px">montant</th>
            <th width="150px">btn</th>
        </tr>
        </thead>
        <tbody>
        {% for ligne in form.lignes %}
            {{ include('AppBundle:Facture:prototypeFactureLigne.html.twig', { 'form': ligne }) }}
        {% endfor %}
        {% for fidelite in form.fidelites %}
            {{ include('AppBundle:Facture:prototypeFactureFidelite.html.twig', { 'form': fidelite }) }}
        {% endfor %}
        </tbody>
    </table>
    <button type="button" class="btn btn-primary btn-xs" id="btnAjoutLigne">
        Ajouter une ligne
    </button>
    <br>
    <button type="button" class="btn btn-primary btn-xs" id="btnAjoutFidelite">
        Ajouter une fidélité
    </button>
    <br>
    <input type="submit">
    <div id="collectionContainerLigne"
         data-prototype="
         {% filter escape %}
             {{ include('AppBundle:Facture:prototypeFactureLigne.html.twig', { 'form': form.lignes.vars.prototype }) }}
         {% endfilter %}">
    </div>
    <div id="collectionContainerFidelite"
         data-prototype="
         {% filter escape %}
             {{ include('AppBundle:Facture:prototypeFactureFidelite.html.twig', { 'form': form.fidelites.vars.prototype }) }}
         {% endfilter %}">
    </div>
    {{ form_widget(form.lignes) }}
    {{ form_widget(form.fidelites) }}
    {{ form_end(form) }}
    <a href="{{ path('facture_liste') }}">retour</a>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        var $collectionHolderLigne;

        jQuery(document).ready(function () {
            // Récupère la collection de lignes
            $collectionHolderLigne = $('#collectionContainerLigne');

            // compte le nombre de ligne actuelles pour avoir l'index d'insertion
            $collectionHolderLigne.data('index', $collectionHolderLigne.find(':input').length + {{ form.lignes|length }});

            $('#btnAjoutLigne').on('click', function () {
                // appelle la fonction d'ajout de ligne
                addLigneForm($collectionHolderLigne);
            });
        });

        function addLigneForm($collectionHolderLigne) {
            // Récupération de l'index courant
            var index = $collectionHolderLigne.data('index');

            // contrôle si la ligne précédente contient un minimum de renseignements
            if(index > 0 && $("#facture_lignes_" + (index-1) + "_designation").val() == ""){
                // ouvre la modal de la ligne précédente
                $('#btn_modif_facture_lignes_' + (index-1)).click();
                // arrête le processus d'ajout de ligne
                return;
            }

            // Récupération du prototype
            var prototype = $collectionHolderLigne.data('prototype');

            // Remplace '__name__' dans le prototype par l'id courant
            var newForm = prototype.replace(/__name__/g, index);

            // incrémente l'index de 1 pour la ligne suivante
            $collectionHolderLigne.data('index', index + 1);

            // Ajoute la nouvelle ligne
            $('#tblLignes').append(newForm);

            // ouvre la modal de la nouvelle ligne
            $('#btn_modif_facture_lignes_' + index).click();
        }
    </script>
    <script type="text/javascript">
        var $collectionHolderFidelite;

        jQuery(document).ready(function () {
            // Récupère la collection de fidelites
            $collectionHolderFidelite = $('#collectionContainerFidelite');

            // compte le nombre de fidelite actuelles pour avoir l'index d'insertion
            $collectionHolderFidelite.data('index', $collectionHolderFidelite.find(':input').length + {{ form.fidelites|length }});

            $('#btnAjoutFidelite').on('click', function () {
                // appelle la fonction d'ajout de fidélités
                addFideliteForm($collectionHolderFidelite);
            });
        });

        function addFideliteForm($collectionHolderFidelite) {
            // Récupération de l'index courant
            var index = $collectionHolderFidelite.data('index');

            // contrôle si la fidélité précédente contient un minimum de renseignements
            if(index > 0 && $("#facture_fidelites_" + (index-1) + "_montant").val() == ""){
                // ouvre la modal de la fidelite précédente
                $('#btn_modif_facture_fidelites_' + (index-1)).click();
                // arrête le processus d'ajout de fidelite
                return;
            }

            // Récupération du prototype
            var prototype = $collectionHolderFidelite.data('prototype');

            // Remplace '__name__' dans le prototype par l'id courant
            var newForm = prototype.replace(/__name__/g, index);

            // incrémente l'index de 1 pour la fidelite suivante
            $collectionHolderFidelite.data('index', index + 1);

            // Ajoute la nouvelle fidelite
            $('#tblLignes').append(newForm);

            // ouvre la modal de la nouvelle fidelite
            $('#btn_modif_facture_fidelites_' + index).click();
        }
    </script>
{% endblock %}